<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHomePage">

    <Button
        android:id="@+id/btnAddABook"
        android:layout_width="209dp"
        android:layout_height="54dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="101dp"
        android:backgroundTint="@color/teal_700"
        android:fontFamily="@font/montserrat"
        android:text="@string/txtAddBookTitle"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBooksAvailable" />

    <Button
        android:id="@+id/btnUpdateABook"
        android:layout_width="209dp"
        android:layout_height="64dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="101dp"
        android:backgroundTint="@color/teal_700"
        android:fontFamily="@font/montserrat"
        android:text="@string/txtUpdateBtn"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddABook" />

    <TextView
        android:id="@+id/txtUserNameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="376dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/txtUserNameInfo"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBooksAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="156dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/txtBooksAvailable"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserNameInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>